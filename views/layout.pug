doctype html
html
  head
    title E-shop
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">    
  body
    header
      h2 E-Commerce
      input(type="button" value="Menu" class="btn" id="menu-btn" onClick="showNav()")
    #navbar
      #icon-div
        img(src="/images/close.png", alt="close-icon" width="30px" onClick="hideNav()")
      ul
        h3(class= "text-white") #{username}
        a(href="/") 
          li Home
        a(href="/submitAd")
          li Submit Ad
        a(href="/inbox")
          li Inbox 
        a(href="/auth/logout")
          li Logout
    block content
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    script(src="/js/main.js")